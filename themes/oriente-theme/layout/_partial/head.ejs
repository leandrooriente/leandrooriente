<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8">
  <%  var title = page.title || config.title + " - " + config.subtitle;
      var description = page.description || config.description;
      var thumbnail = page.thumbnail || config.thumbnail; %>
  <title><%= title %></title>
  <meta name="description" content="<%= description %>">

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- ICONS -->
  <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
  <link rel="icon" type="image/png" href="/favicons/favicon-32x32.png" sizes="32x32">
  <link rel="icon" type="image/png" href="/favicons/favicon-16x16.png" sizes="16x16">
  <link rel="manifest" href="/favicons/manifest.json">
  <link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#5bbad5">
  <link rel="shortcut icon" href="/favicons/favicon.ico">

  <!-- WINDOWS APP -->
  <meta name="msapplication-config"   content="/favicons/browserconfig.xml">
  <meta name="theme-color"            content="#ffffff">

  <!-- TWITTER METAS -->
  <meta name="twitter:card"           content="summary_large_image">
  <meta name="twitter:site"           content="<%= config.social.twitter_account %>">
  <meta name="twitter:creator"        content="<%= config.social.twitter_account %>">
  <meta name="twitter:title"          content="<%= title %>">
  <meta name="twitter:description"    content="<%= description %>">
  <meta name="twitter:image"          content="<%= config.url + thumbnail %>">

  <!-- FB METAS -->
  <meta property="fb:pages"           content="<%= config.social.fb_app %>" />
  <meta property="og:url"             content="<%= page.permalink || config.url %>" />
  <meta property="og:type"            content="article" />
  <meta property="og:title"           content="<%= title %>" />
  <meta property="og:description"     content="<%= description %>" />
  <meta property="og:image"           content="<%= config.url + thumbnail %>" />

  <!-- RSS -->
  <link rel="alternate" type="application/atom+xml" title="Atom feed" href="<%= config.url + config.root + config.feed.path %>" />

  <%- autoCanonical(config, page) %>
  <%- staticVersion('/css/style.css') %>
</head>
