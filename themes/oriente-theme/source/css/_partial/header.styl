#header
  padding: 50px 0
  background: color-dark-background
  border-bottom: 1px solid color-border

#logo
  font-size: 3rem
  font-weight: 500
  line-height: 1.2
  margin: 0

  a
    text-decoration: none;
    color: color-light
    transition: color .4s ease
    border: 0

    &:hover
      color: color-link
      border: 0

  span
    display: block
    font-size: 0.8rem
