#header
  padding: 50px 0
  background: color-dark-background
  border-bottom: 1px solid color-border
  overflow: hidden

#logo
  float: left
  font-size: 3rem
  font-weight: 500
  line-height: 1.2
  margin: 0

  a
    text-decoration: none
    color: color-light
    transition: color .4s ease
    border: 0

    &:hover
      color: color-link
      border: 0

  span
    display: block
    font-size: 0.8rem

#social
  float: right
  list-style: none
  margin: 0
  padding: 20px 0 0 0
  li
    margin: 0
    padding: 0
    display: inline-block
    width: 2.5rem
  a, a:hover
    border: 0
  svg
    fill: color-light
    transition: fill 0.4s ease

    &:hover
      fill: color-link
      cursor: pointer
